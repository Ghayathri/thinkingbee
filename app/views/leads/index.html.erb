<div class="container-fluid" %>

	<div class="row">
		<div class="col-lg-12">
			<div class="pull-right">
				<%= link_to "<i class='fa fa-plus'></i> Add Lead".html_safe , new_lead_path, class: "btn btn-warning btn-sm" %>
			</div>
			<div class="page-header">
				<h1><small>Leads</small></h1>
			</div>
		</div>
		<div class="col-lg-12">
	        <div class="bs-component">
	          	<ul class="nav nav-tabs">
	           		<li class="active"><a href="#home" data-toggle="tab">Dashboard</a></li>
	            	<li><a href="#index" data-toggle="tab">List</a></li>
	          	</ul>
	          	<div id="myTabContent" class="tab-content">
	          		
	            	<div class="tab-pane fade active in" id="home">
	              		<div class="col-lg-10">
	              			<div class="col-lg-7">
	              				<br>
	              				<div class="panel panel-danger">
	              					<div class="panel-heading">
	              						Chart 1
	              					</div>
	              					<div class="panel-body">
	              						Chart coemes here
	              					</div>
	              				</div>
	              			</div>
	              			<div class="col-lg-7">
	              				<br>
	              				<div class="panel panel-info">
	              					<div class="panel-heading">
	              						Chart 1
	              					</div>
	              					<div class="panel-body">
	              						Chart coemes here
	              					</div>
	              				</div>
	              			</div>
	              		</div>
	            	</div>
	            	<div class="tab-pane fade" id="index">
	              		<div class="row">
							<div class="col-lg-10">
								<table class="table table-hover">
									<tr>
										<th>Name</th>
										<th>Actions</th>
									</tr>
									<% @leads.each do |lead| %>
										<tr>
											<td><%= lead.name %></td>
											<td>
												<%= link_to "Show", lead_path(lead) %>
												<%= link_to "Edit", edit_lead_path(lead) %>
												<%= link_to "Delete", lead , method: :delete %>
											</td>
										</tr>
									<% end %>
								</table>
							</div>
						</div>
	            	</div>	
	          	</div>
	        </div>
	    </div>
	</div>
	
</div>