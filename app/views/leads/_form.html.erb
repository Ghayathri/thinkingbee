<%= form_for @lead do |f| %>
	<div class="col-lg-6">
		<div class="form-group">
			<label class="col-lg-4 control-label">Name</label>
			<%= f.text_field :name, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.submit "Create", class: "btn btn-success" %>
		</div>
	</div>
<% end %>